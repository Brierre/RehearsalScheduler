public interface SceneService {
/**
 * 
 * @param musicalName
 * @param musicalId
 * @param sceneIdPK
 * @param sceneName
 * @param songTitle
 * @return
 */
	List<Scene> fetchScenes(String musicalName, String sceneName, String songTitle, String firstName, String lastName, String characterName);
//FUTURE FUNCTIONALITY: Add "add scene" and "update scene" options in case pre-loaded scenes need to be edited

