package com.msaunthaigh.rehearsalscheduler.service;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import com.msaunthaigh.rehearsalscheduler.dao.PartDao;
import com.msaunthaigh.rehearsalscheduler.entity.Part;

import lombok.extern.slf4j.Slf4j;

@Service
@Slf4j
public class DefaultPartService implements PartService {
	@Autowired
	private PartDao partDao;
	
	@Transactional
	@Override
	public List<Part> fetchPartsByMusical(Integer partNumber, Integer castmemberId, String characterName, String characterGroup, 
			String musicalName, String firstName, String lastName) {
		log.info("fetchPart has been called: partNumber={}, castmemberId={}, characterName={}, characterGroup={}, "
				+ "musicalName={}, firstName={}, lastName={}", partNumber, castmemberId, characterName, characterGroup,
				musicalName, firstName, lastName);
		
		return partDao.fetchPartsByMusical(partNumber, castmemberId, characterName, characterGroup, musicalName, firstName, lastName);
	}
	
	@Transactional
	@Override
	public List<Part> fetchPartsByScene(Integer partNumber, Integer castmemberId, String characterName, String characterGroup, 
			String musicalName, String firstName, String lastName, Integer sceneNumber) {
		log.info("fetchPart has been called: partNumber={}, castmemberId={}, characterName={}, characterGroup={}, "
				+ "musicalName={}, firstName={}, lastName={}, sceneNumber={}", partNumber, castmemberId, characterName, characterGroup,
				musicalName, firstName, lastName, sceneNumber);
		
		return partDao.fetchPartsByScene(partNumber, castmemberId, characterName, characterGroup, musicalName, firstName, lastName, sceneNumber);
	}
	
	@Transactional
	@Override
	public List<Part> fetchPartsByCastmemberInfo(Integer partNumber, Integer castmemberId, String musicalName, String characterName, String characterGroup, 
			String firstName, String lastName) {
		log.info("fetchPart has been called: partNumber={}, castmemberId={}, musicalName={}, characterName={}, characterGroup={}, "
				+ "firstName={}, lastName={}", partNumber, castmemberId, characterName, characterGroup, firstName, lastName);
		
		return partDao.fetchPartsByCastmemberInfo(partNumber, castmemberId, musicalName, characterName, characterGroup, firstName, lastName);
	}

}
