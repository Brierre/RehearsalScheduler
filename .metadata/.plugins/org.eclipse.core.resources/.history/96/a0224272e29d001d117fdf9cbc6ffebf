package com.msaunthaigh.rehearsalscheduler.controller;

import java.util.List;
import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RestController;

import com.msaunthaigh.rehearsalscheduler.entity.Part;
import com.msaunthaigh.rehearsalscheduler.service.PartService;

import lombok.extern.slf4j.Slf4j;

@RestController
@Slf4j
public class DefaultPartController implements PartController {

	@Autowired
	private PartService partService;
	
	//GET operation, read/retrieve parts
	
	@Override
	public List<Part> fetchPartsByMusical(Integer partNumber, Integer castmemberId, String characterName, String characterGroup, 
			String musicalName, String firstName, String lastName) {
		log.info("partNumber={}, castmemberId={}, characterName={}, characterGroup={}, musicalName={}, firstName={}, lastName={}, sceneNumber={}", 
				partNumber, castmemberId, characterName, characterGroup, musicalName, firstName, lastName);
		return partService.fetchPartsByMusical(partNumber, castmemberId, characterName, characterGroup, musicalName, firstName, lastName);
	}
	
	@Override
	public List<Part> fetchPartsByScene(Integer partNumber, Integer castmemberId, String characterName, String characterGroup, 
			String musicalName, String firstName, String lastName, Integer sceneNumber) {
		log.info("partNumber={}, castmemberId={}, characterName={}, characterGroup={}, musicalName={}, firstName={}, lastName={}, sceneNumber={}", 
				partNumber, castmemberId, characterName, characterGroup, musicalName, firstName, lastName, sceneNumber);
		return partService.fetchPartsByScene(partNumber, castmemberId, characterName, characterGroup, musicalName, firstName, lastName, sceneNumber);
	}
	
	@Override
	public List<Part> fetchPartsByCastmemberInfo(Integer partNumber, Integer castmemberId, String characterName, String characterGroup, 
			String firstName, String lastName) {
		log.info("partNumber={}, castmemberId={}, characterName={}, characterGroup={}, firstName={}, lastName={}", 
				partNumber, castmemberId, characterName, characterGroup, firstName, lastName);
		return partService.fetchPartsByCastmemberInfo(partNumber, castmemberId, characterName, characterGroup, firstName, lastName);
	}
	
}

