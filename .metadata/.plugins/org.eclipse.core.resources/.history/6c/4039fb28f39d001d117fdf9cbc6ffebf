package com.msaunthaigh.rehearsalscheduler.service;

import java.util.List;
import java.util.Optional;

import com.msaunthaigh.rehearsalscheduler.entity.CastMember;

public interface CastMemberService {
	
/**
 * 
 * @param castMemberId
 * @param firstName
 * @param lastName
 * @return
 */
List<CastMember> fetchCastMember(Integer castMemberId, String firstName, String lastName, String musicalName, String characterName);

/**
 * 
 * @param firstName
 * @param lastName
 * @param characterName
 * @param phoneNumber
 * @param tapPerformer
 * @param costumeComplete
 * @return
 */
Optional<CastMember> newCastMember(String firstName, String lastName, String phoneNumber,
	Boolean tapPerformer, Boolean costumeComplete);

/**
 * 
 * @param firstName
 * @param lastName
 * @param newFirstName
 * @param newLastName
 * @param phoneNumber
 * @param tapPerformer
 * @param costumeComplete
 * @return
 */
Optional<CastMember> updateCastMember(String firstName, String lastName, String newFirstName, String newLastName,
		String phoneNumber, Boolean tapPerformer, Boolean costumeComplete);
	
/**
 * 
 * @param firstName
 * @param lastName
 * @param phoneNumber
 * @return
 */
Optional<CastMember> deleteCastMember(String firstName, String lastName, String phoneNumber);
	
}
