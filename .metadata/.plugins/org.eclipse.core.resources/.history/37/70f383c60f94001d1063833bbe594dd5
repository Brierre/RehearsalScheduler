//		return partService.fetchPart(partId, castId, characterName, characterGroup);
//	}

	@Override
	public List<Part> fetchPart(Integer partId, Integer castId, String characterName, String characterGroup) {
		log.info("partId={}, castId={}, characterName={}, characterGroup={}", partId, castId, characterName, characterGroup);
		return partService.fetchPart(partId, castId, characterName, characterGroup);
	}
}

